<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/primaryColor</item>
        <item name="actionModeCloseDrawable">@drawable/back_bttn</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>
    <style name="AppTheme.DarkerBackground">
        <item name="android:windowBackground">@color/lightGray</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="AppTheme.Collage" parent="AppTheme.DarkerBackground">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="WideButton">
        <item name="android:paddingLeft">48dp</item>
        <item name="android:paddingRight">48dp</item>
    </style>
    <!-- no way to have 'match_parent' in dimens, need to do with styles -->
    <style name="ActionButton">
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
