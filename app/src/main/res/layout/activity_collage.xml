<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainActivity">

    <include layout="@layout/main_toolbar"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <RelativeLayout
        android:id="@+id/content"
        android:paddingTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >
        <!-- a quick-n-dirty way to make a colored button with touch feedback -->
        <!-- would do something more optimized in the production -->
        <FrameLayout
            android:id="@+id/button_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:foreground="?attr/selectableItemBackground" >
            <TextView
                android:background="@color/primaryColor"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColorInverse"
                android:textAllCaps="true"
                android:text="@string/choose_images"
                />
        </FrameLayout>
        <ImageView
            android:id="@+id/collageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_above="@id/button_choose"
            android:scaleType="centerInside"
            />
    </RelativeLayout>

</FrameLayout>
